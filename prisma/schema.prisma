// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_URL")
}

model Post {
    id        Int      @id @default(autoincrement())
    name      String
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
    @@index([name])
}

model Contact {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  phone     String?  // phone is optional
  message   String
  contacted Boolean  @default(false) // Add this line to track if contacted
  notes     String?  // Optional notes field
  createdAt DateTime @default(now())
}



model SeoSettings {
  id          Int      @id @default(autoincrement())
  pagePath    String   @unique // Mark this field as unique
  title       String
  description String
}

model AboutUs {
  id        Int      @id @default(autoincrement())
  content   String
  isActive  Boolean  @default(false) // Track if the entry is active
  updatedAt DateTime @updatedAt
}



model Services {
  id        Int      @id @default(autoincrement())
  content   String
  isActive  Boolean  @default(false) // Track if the entry is active
  updatedAt DateTime @updatedAt
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  imagePaths  String[] // An array of image paths
  updatedAt   DateTime @updatedAt
}

model Review {
  id          Int      @id @default(autoincrement())
  name        String   // Name of the reviewer
  companyName String?  // Optional: Company Name
  reviewText  String   // The actual review content
  rating      Int      // Rating (1-5)
  imagePath   String?  // Optional: Path to the reviewer's image
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model AllServices {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  features String[]
  threeDModelPath String? // Optional:
  updatedAt   DateTime @updatedAt
}



{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": [
      "dom",
      "dom.iterable",
      "ES2022"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "checkJs": true,
    "noEmit": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "typescript-plugin",
        "options": {}
      },
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"],                   // Add `~` alias here
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"]
    },
    "incremental": true
  },
  "include": [
    "src/**/*",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
